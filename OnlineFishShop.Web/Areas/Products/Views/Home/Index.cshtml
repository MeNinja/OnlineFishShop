@model IEnumerable<OnlineFishShop.Data.Models.Product>

@{
    ViewData["Title"] = OnlineFishShopResources.lblProducts;
}
@using OnlineFishShop.Common.Resources

<environment include="Development">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</environment>

<h2>@ViewData["Title"]</h2>
@if (User.IsInRole("Admin"))
{
    <p>
        <a asp-action="Create">Create New</a>
    </p>
}
    <div class="card-group">
        @foreach (var item in Model)
        {
            <div class="col-lg-3 col-md-3 col-sm-2 col-xs-6">
                <div class="card">
                    <a asp-area="Products" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"><img class="card-img-top" src=@item.ThumbnailSource id="product-img"></a>
                    <div class="card-body">
                        <a asp-area="Products" asp-controller="Home" asp-action="Details" asp-route-id="@item.Id"><h5 class="card-title">@item.Name</h5></a>
                        <p class="card-text"><small class="text-muted">@item.Price</small></p>
                        <p class="card-text"><small class="text-muted"><button class="btn-primary" id="submit-btn"  onclick="addToCart('@item.Id', '@item.Name', '@item.ThumbnailSource','@item.Price', '1')">Купи</button></small></p>
                    </div>
                </div>
            </div>
        }
    </div>